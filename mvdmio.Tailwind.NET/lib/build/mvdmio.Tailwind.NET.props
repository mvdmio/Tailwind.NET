<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<PropertyGroup>
		<!-- Set the OS portion of the binary file name -->
		<TailwindBinaryOS>
			<Choose>
				<When Condition="'$(OS)' == 'Windows_NT'">
					windows
				</When>
				<When Condition="$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::OSX)))">
					macos
				</When>
				<Otherwise>
					linux
				</Otherwise>
			</Choose>
		</TailwindBinaryOS>

		<!-- Set the architecture portion of the binary file name -->
		<TailwindBinaryArch>
			<Choose>
				<When Condition="'$(Platform)' == 'ARM64'">
					arm64
				</When>
				<When Condition="'$(Platform)' == 'ARM'">
					armv7
				</When>
				<Otherwise>
					x64
				</Otherwise>
			</Choose>
		</TailwindBinaryArch>


		<!-- Set the executable extension for the binary -->
		<TailwindBinaryExt>
			<Choose>
				<When Condition="'$(OS)' == 'Windows_NT'">
					.exe
				</When>
				<Otherwise>
				</Otherwise>
			</Choose>
		</TailwindBinaryExt>

		<!-- Construct the final binary file path -->
		<TailwindBinaryPath>tools\tailwindcss-$(TailwindBinaryOS)-$(TailwindBinaryArch)$(TailwindBinaryExt)</TailwindBinaryPath>
		<TailwindInputFile>./tailwind/tailwind.input.css</TailwindInputFile>
		<TailwindOutputFile>./tailwind/tailwind.output.css</TailwindOutputFile>
	</PropertyGroup>
</Project>
