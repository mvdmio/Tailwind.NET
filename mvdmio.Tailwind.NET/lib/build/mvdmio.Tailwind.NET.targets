<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<Target Name="CopyTailwindContent" BeforeTargets="BuildTailwind" Condition="'$(TailwindCopyDefaultFiles)' == 'true'">
		<PropertyGroup>
			<ShouldCopyConfig>!Exists('$(MSBuildProjectDirectory)\Tailwind\Tailwind.config.js')</ShouldCopyConfig>
			<ShouldCopyInput>!Exists('$(MSBuildProjectDirectory)\Tailwind\tailwind.input.css')</ShouldCopyInput>
		</PropertyGroup>

		<Message Text="Copying Tailwind files."                                 Importance="high" Condition="$(ShouldCopyConfig) Or $(ShouldCopyInput)" />
		<Message Text="  Config: $(TailwindFilesSourcepath)\tailwind.config.js" Importance="high" Condition="$(ShouldCopyConfig)" />
		<Message Text="  Input: $(TailwindFilesSourcepath)\tailwind.input.css"  Importance="high" Condition="$(ShouldCopyInput)" />
		<Message Text="  Destination: $(MSBuildProjectDirectory)\Tailwind"      Importance="high" Condition="$(ShouldCopyConfig) Or $(ShouldCopyInput)" />

		<Copy SourceFiles="$(TailwindFilesSourcepath)\tailwind.config.js" DestinationFolder="$(MSBuildProjectDirectory)\Tailwind" Condition="$(ShouldCopyConfig)" />
		<Copy SourceFiles="$(TailwindFilesSourcepath)\tailwind.input.css" DestinationFolder="$(MSBuildProjectDirectory)\Tailwind" Condition="$(ShouldCopyInput)" />
	</Target>

	<Target Name="BuildTailwind" BeforeTargets="CoreCompile">
		<PropertyGroup>
			<TailwindBaseCommand>"$(TailwindBinaryPath)" -c "$(TailwindConfigFile)" -i "$(TailwindInputFile)" -o "$(TailwindOutputFile)"</TailwindBaseCommand>
		</PropertyGroup>

		<Message Text="Building tailwind ($(Configuration))."  Importance="high" />
		<Message Text="  Config file : $(TailwindConfigFile)"  Importance="high" />
		<Message Text="  Input file  : $(TailwindInputFile)"   Importance="high" />
		<Message Text="  Output file : $(TailwindOutputFile)"  Importance="high" />
		<Message Text="  Binary path : $(TailwindBinaryPath)"  Importance="high" />
		<Message Text="  Base Command: $(TailwindBaseCommand)" Importance="high" />

		<Exec Condition="'$(Configuration)'=='Debug'" Command="$(TailwindBaseCommand)" />
		<Exec Condition="'$(Configuration)'=='Release'" Command="$(TailwindBaseCommand) --minify" />
	</Target>
</Project>