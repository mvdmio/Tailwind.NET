<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<Target Name="CopyTailwindContent" BeforeTargets="BuildTailwind" Condition="$(TailwindCopyDefaultFiles) == 'true'">
		<Copy SourceFiles="$(TailwindConfigJsSourcePath)" DestinationFolder="$(MSBuildProjectDirectory)" Condition="!Exists('$(MSBuildProjectDirectory)\tailwind.config.js')" />
		<Copy SourceFiles="$(TailwindInputCssSourcePath)" DestinationFolder="$(MSBuildProjectDirectory)\tailwind" Condition="!Exists('$(MSBuildProjectDirectory)\tailwind\tailwind.input.css')" />
	</Target>

	<Target Name="BuildTailwind" BeforeTargets="BeforeBuild">
		<Exec Condition="'$(Configuration)'=='Debug' and $(TailwindWatch)=='true'"   Command="start /b $(TailwindBaseCommand) --watch" />
		<Exec Condition="'$(Configuration)'=='Debug' and $(TailwindWatch)!='true'"   Command="$(TailwindBaseCommand)" />
		<Exec Condition="'$(Configuration)'=='Release'"                              Command="$(TailwindBaseCommand) --minify" />
	</Target>
</Project>
